{
  "compilerOptions": {
    "target": "ES2020",   
    "module": "CommonJS",  
    "outDir": "./dist",    
    "rootDir": "./src",    
    "strict": true,        
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
